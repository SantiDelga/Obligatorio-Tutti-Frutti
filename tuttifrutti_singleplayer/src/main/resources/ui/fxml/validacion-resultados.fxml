<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="uy.edu.tuttifrutti.ui.juego.ValidacionResultadosController"
            stylesheets="@../css/tutti-frutti.css"
            prefWidth="520.0" prefHeight="520.0">

    <top>
        <HBox alignment="CENTER" styleClass="main-card" BorderPane.alignment="CENTER">
            <children>
                <Label text="Validación de resultados" styleClass="title-label" />
            </children>
        </HBox>
    </top>

    <center>
        <VBox spacing="10" BorderPane.alignment="CENTER">
            <children>
                <TableView fx:id="resultTable" prefWidth="480.0" prefHeight="420.0">
                    <columns>
                        <TableColumn fx:id="colCategoria" text="Categoría" prefWidth="160.0" />
                        <TableColumn fx:id="colRespuesta" text="Respuesta" prefWidth="220.0" />
                        <TableColumn fx:id="colValida" text="Valida" prefWidth="100.0" />
                    </columns>
                </TableView>
            </children>
            <padding>
                <Insets top="10" right="10" bottom="10" left="10" />
            </padding>
        </VBox>
    </center>

    <bottom>
        <HBox spacing="10" alignment="CENTER_RIGHT" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10" />
            </padding>
            <children>
                <Button text="Cerrar" onAction="#onCerrar" styleClass="tutti-button" />
            </children>
        </HBox>
    </bottom>

</BorderPane>
