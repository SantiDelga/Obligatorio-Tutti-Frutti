<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="uy.edu.tuttifrutti.ui.login.LoginController"
           prefWidth="500.0" prefHeight="650.0">

    <!-- Fondo degradé lo pone el CSS en .root -->

    <children>
        <!-- Tarjeta central MÁS CHICA -->
        <BorderPane prefWidth="340.0" prefHeight="460.0"
                    maxWidth="340.0" maxHeight="460.0"
                    styleClass="main-card">
            <center>
                <VBox BorderPane.alignment="CENTER"
                      spacing="25"
                      alignment="CENTER"
                      styleClass="login-content">

                    <!-- LOGO -->
                    <ImageView fitWidth="220.0" preserveRatio="true">
                        <image>
                            <Image url="@../images/logo-tuttifrutti.png"/>
                        </image>
                    </ImageView>

                    <!-- CAMPO NOMBRE -->
                    <TextField fx:id="nombreField"
                               promptText="NOMBRE"
                               maxWidth="260.0"
                               styleClass="tutti-textfield"/>

                    <!-- BOTÓN INGRESAR -->
                    <Button fx:id="ingresarButton"
                            text="INGRESAR"
                            onAction="#onIngresar"
                            maxWidth="260.0"
                            styleClass="tutti-button"/>
                </VBox>
            </center>
        </BorderPane>
    </children>
</StackPane>
